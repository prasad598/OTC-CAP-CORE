{
  "openapi": "3.0.0",
  "info": {
    "title": "RestService onTaskEvent API",
    "version": "1.0.0"
  },
  "paths": {
    "/rest/btp/core/onTaskEvent": {
      "post": {
        "summary": "Handle task event",
        "description": "Creates or updates workflow task monitoring records based on the `HTTP_CALL` value. Use `POST` to create a new task record and `PATCH` to update an existing one.",
        "operationId": "onTaskEvent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "SWF_INSTANCE_ID": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "REQ_TXN_ID": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "REQUEST_TYPE": {
                    "type": "string",
                    "description": "Request type code"
                  },
                  "TASK_TYPE": {
                    "type": "string",
                    "description": "Task type code"
                  },
                  "TASK_STATUS": {
                    "type": "string",
                    "description": "Status from SAP Build Process Automation"
                  },
                  "DECISION": {
                    "type": "string",
                    "description": "Decision code"
                  },
                  "PROCESSOR": {
                    "type": "string",
                    "format": "email",
                    "description": "User who processed the task"
                  },
                  "ASSIGNED_GROUP": {
                    "type": "string",
                    "description": "IAS group assigned to the task"
                  },
                  "COMPLETED_AT": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when task completed"
                  },
                  "HTTP_CALL": {
                    "type": "string",
                    "description": "HTTP method of the callback",
                    "enum": ["POST", "PATCH"]
                  }
                },
                "required": [
                  "SWF_INSTANCE_ID",
                  "REQ_TXN_ID",
                  "HTTP_CALL"
                ],
                "example": {
                  "SWF_INSTANCE_ID": "badd8bcb-72af-11f0-bbe6-eeee0a87f288",
                  "REQ_TXN_ID": "00112233-4455-6677-8899-aabbccddeeff",
                  "REQUEST_TYPE": "TE",
                  "TASK_TYPE": "TE_REQUESTER",
                  "TASK_STATUS": "COMPLETED",
                  "DECISION": "APR",
                  "PROCESSOR": "user@example.com",
                  "ASSIGNED_GROUP": "TE_RESO_TEAM",
                  "COMPLETED_AT": "2024-01-01T00:00:00Z",
                  "HTTP_CALL": "POST"
                }
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "integer" },
                    "message": { "type": "string" },
                    "REQ_TXN_ID": { "type": "string", "format": "uuid" },
                    "correlationId": { "type": "string", "format": "uuid" }
                  },
                  "required": ["status", "message", "REQ_TXN_ID", "correlationId"],
                  "example": {
                    "status": 200,
                    "message": "Task record updated",
                    "REQ_TXN_ID": "00112233-4455-6677-8899-aabbccddeeff",
                    "correlationId": "2f7929f8-dd8d-4209-7c39-7c9cedbe43b5"
                  }
                }
              }
            }
          },
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1rest~1btp~1core~1onTaskEvent/post/responses/200/content/application~1json/schema"
                },
                "example": {
                  "status": 201,
                  "message": "Task record created",
                  "REQ_TXN_ID": "00112233-4455-6677-8899-aabbccddeeff",
                  "correlationId": "2f7929f8-dd8d-4209-7c39-7c9cedbe43b5"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/paths/~1rest~1btp~1core~1onTaskEvent/post/responses/200/content/application~1json/schema"
                },
                "example": {
                  "status": 400,
                  "message": "Missing required field: SWF_INSTANCE_ID",
                  "REQ_TXN_ID": "",
                  "correlationId": "2f7929f8-dd8d-4209-7c39-7c9cedbe43b5"
                }
              }
            }
          }
        }
      }
    }
  }
}
