{
  "name": "OTC-CAP-CORE",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/prasad598/OTC-CAP-CORE",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4",
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/resilience": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/connectivity": "^3",
    "exceljs": "^4",
    "@sap/xsenv": "^4",
    "nodemailer": "^6",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "jest": "^29"
  },
  "scripts": {
    "start": "cds-serve",
    "test": "node --test"
  },
  "jest": {
    "testMatch": ["**/srv/util/enrichCoreComment.test.js"]
  },
  "cds": {
    "hana": {
      "schema": "BTP"
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true,
      "sap_process_automation_service": {
        "kind": "rest",
        "credentials": {
          "destination": "sap_process_automation_service"
        }
      },
      "sap_process_automation_mail": {
        "kind": "rest",
        "credentials": {
          "destination": "sap_process_automation_mail"
        }
      }
    }
  }
}
